@model PetShop.Models.NuocXuatXu

@{
    ViewData["Title"] = "Thêm nước xuất xứ";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="TenNuocXuatXu" class="control-label"></label>
                <input asp-for="TenNuocXuatXu" class="form-control" />
                <span asp-validation-for="TenNuocXuatXu" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TenNuocXuatXuKhongDau" class="control-label"></label>
                <input asp-for="TenNuocXuatXuKhongDau" class="form-control" placeholder="Bỏ trống sẽ tự động xử lý tên không dấu" />
                <span asp-validation-for="TenNuocXuatXuKhongDau" class="text-danger"></span>
            </div>
            <div class="mb-0">
                <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Thêm mới</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
